                            <TextBlock Text="Цена:"/>
                            <TextBlock Text="Связной: 54990 рублей"/>
                            <TextBlock Text="Ситилинк: 53990 рублей"/>
                        </StackPanel>
                    </ToolTip>
                </RadioButton.ToolTip>
            </RadioButton>
            <RadioButton GroupName="phones" Content="Nexus 5x">
                <RadioButton.ToolTip>
                    <ToolTip Background="Green" Foreground="Black" >
                        <StackPanel>
                            <TextBlock Text="Цена:"/>
                            <TextBlock Text="Связной: 29990 рублей"/>
                            <TextBlock Text="Ситилинк:28990 рублей"/>
                        </StackPanel>
                    </ToolTip>
                </RadioButton.ToolTip>
            </RadioButton>
            <RadioButton GroupName="phones" Content="Lumia 950">
                <RadioButton.ToolTip>
                    <ToolTip Background="Green" Foreground="Black">
                        <StackPanel>
                            <TextBlock Text="Цена:"/>
                            <TextBlock Text="Связной: 39990 рублей"/>
                            <TextBlock Text="Ситилинк: 40990 рублей"/>
                        </StackPanel>
                    </ToolTip>
                </RadioButton.ToolTip>
            </RadioButton>

        </StackPanel>

    </Grid>
</Window>
