<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Expander Expanded="Expander_Expanded" Collapsed="Expander_Collapsed" Header="Некрасов">
                <TextBlock Text="Однажды в студенческую зимнюю пору..."/>
            </Expander>
            <Expander Expanded="Expander_Expanded" Collapsed="Expander_Collapsed" Header="Пушкин">
                <TextBlock Text="Онегин был, по мнению многих, ученый малый, но..."/>
            </Expander>
            <Expander Expanded="Expander_Expanded" Collapsed="Expander_Collapsed" Header="Опрос">
                <StackPanel>
                    <CheckBox Content="WinForms"/>
                    <CheckBox Content="WPF"/>
                    <CheckBox Content="ASP.NET"/>
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Window>
